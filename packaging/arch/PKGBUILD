pkgname=freq-to-notes
pkgver=1.1.0
pkgrel=1
pkgdesc="A TUI to convert note frequencies to 12-tone equal-temperament notes names"
arch=('x86_64')
url="https://www.github.com/marcell-ziegler/freq-to-notes"
license=('MIT')
depends=('glibc')
makedepends=('cargo')
# source=("https://github.com/marcell-ziegler/freq-to-notes/archive/refs/tags/v$pkgver.tar.gz")
# source=("v$pkgver.tar.gz")
source=("freq-to-notes-$pkgver.tar.gz::https://github.com/marcell-ziegler/freq-to-notes/archive/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    cargo build --release
}

# package() {
#     install -Dm755 "/target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"
# }
package() {
    install -Dm755 "$srcdir/$pkgname-$pkgver/target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
